@{
    Layout = "../Shared/_LayoutAgencyBankingUI.cshtml";
 }
@using AgencyBanking_UI.Model
@using AgencyBanking_BLL.Controllers
@{
    ViewBag.Title = "Agency Banking Home Page";
    List<SummaryMenuItem> itemlist = new List<SummaryMenuItem>();
    //Prepare menu items
    itemlist.Add(new SummaryMenuItem("Withdrawals Summary","/Content/image/withdraw.png","WIthdrawal",ViewBag.Data));
    itemlist.Add(new SummaryMenuItem("Deposits Summary","/Content/image/deposit.png","Deposit",ViewBag.Data));
    itemlist.Add(new SummaryMenuItem("Branch Summary","/Content/image/report.png","branches",ViewBag.Data));
    itemlist.Add(new SummaryMenuItem("Agents Summary","/Content/image/bankteller.png","agents",ViewBag.Data));

}

@section HtmlHead{
    <style>
        @@media only screen and (min-width:  768px) {
            .box-shadow {
                box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, .05);
            }
            .zoom {
                padding: 20px;
                -ms-transition: transform .2s;
                -o-transition: transform .2s;
                -webkit-transition: transform .2s;
                transition: transform .2s; /* Animation */
                width: 200px;
                margin: 0 auto;
            }

            .zoom:hover {
                transform: scale(1.1);
            }

        }
        @@media only screen and (max-width: 600px) {
            .zoom {
                margin-top: 10px;
            }

        }

    </style>

}

<section class="content">
    <div class="row">
    @foreach (var menuItem in itemlist)
    {
        <div class=" col-md-4 col-sm-6  col-12 zoom">
        <a href=@Url.Action("Index", "Summary",new {type = menuItem.FieldName})>
                <div class="info-box bg-aqua-gradient mb-4 box-shadow">
                    <div class="row no-gutters">
                        <div class="col">
                            <img class="img-fluid rounded p-3" src="@Html.Raw(menuItem.Imagelink)" alt="@Html.Raw(menuItem.Title)">
                        </div>
                        <div class="col">
                            <div class="card-body">
                                <p class="text-uppercase info-box-text">@Html.Raw(menuItem.Title)</p>
                                <p class="card-subtitle info-box-number">Kshs @Html.Raw(menuItem.Amount)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
    </div>
</section>