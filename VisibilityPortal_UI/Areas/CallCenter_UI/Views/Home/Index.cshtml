      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <div class="row">
          <div class="col-lg-5 col-xs-5 col-sm-5 col-md-5">
            <!-- small box -->
            <div class="small-box bg-aqua">
              <div class="inner">
                <h3>150, 000</h3>

                <p>M-Pesa Float</p>
              </div>
              <div class="icon">
                <i class="ion ion-bag"></i>
              </div>
              <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- /.small box -->
          <div class="col-lg-5 col-xs-5 col-sm-5 col-md-5">
