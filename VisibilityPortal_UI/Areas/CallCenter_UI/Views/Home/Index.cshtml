@section Scripts {
  <!-- Include external scripts-->
  @{
    string[] scriptFiles = {
$"{CallCenterAreaRegistration.AreaPathFromRoot}/Scripts/portal/view/_SaccosLinkMonitoring.js",
$"{CallCenterAreaRegistration.AreaPathFromRoot}/Scripts/portal/view/home.js"
};
  }
  @Scripts.Render(scriptFiles)
  
  <!-- Define local scripts-->
  <script>
    $(document).ready(function () {
      initTabulator("#linkMonitoringListTable");
      LoadTabulatorData("@Url.Action("GetLinkInfoForClient", "LinkMonitoring")", "", true);

      saccoVitals = {
        corporateNo: null,
        mpesaFloat: {
          contentContainer: "#M-PesaFloat",
          restUrl: "@Url.Action("GetMPesaFloat","Home")"
        },
        bulkSMSFloat: {
          contentContainer: "#BULKSMSFloat",
          restUrl: "@Url.Action("GetBulkSMSFloat", "Home")"
        },
        trxSMSFloat: {
          contentContainer: "#TrxSMSFloat",
          restUrl: "@Url.Action("GetTrxSMSFloat", "Home")"
        },
        linkStatus: {
          contentContainer: "#LinkStatus",
          restUrl: "@Url.Action("GetLinkInfoForClient", "LinkMonitoring")"
        }
      };
      $("#selectSacco").change(function () {
        var selectedSaccoCorporateNo = $(this).val();
        if (!selectedSaccoCorporateNo) return;
        // here, refresh the widgets
        saccoVitals.corporateNo = selectedSaccoCorporateNo;
        RefreshSaccoVitals(saccoVitals);
      });
    });
  </script>
}