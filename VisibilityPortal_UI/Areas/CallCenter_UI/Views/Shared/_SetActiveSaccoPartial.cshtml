<div class="row py-1 active-sacco-container">
  <div class="col">
    <h4>
      Active sacco:
      <small>
        <span id="currentActiveSacco">
          <strong>
            <i id="activeSaccoPlaceholder">
              @*@(activeSacco != null ? activeSacco.sacconame : "not set")*@
              [not set]
            </i>
          </strong>
        </span>
      </small>
    </h4>
  </div>
  <div class="col input-group">
    @Html.DropDownList("selectSacco",
    Enumerable.Empty<SelectListItem>(),
    "Select Sacco",
    htmlAttributes: new
    {
      @class = "show-tick",
      @id = "selectSacco"
    }
  )
    <span class="input-group-btn">
      <button type="button" class="btn btn-info btn-flat"
              id="refreshSaccoSelectbox"
              onclick="LoadSaccoList('@Url.Action("GetSaccoList","Sacco")', '#selectSacco')">
        <i class="fa fa-refresh" aria-hidden="true"></i>
      </button>
    </span>
  </div>
</div>
