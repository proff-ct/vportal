@{
  Layout = "~/Views/Shared/_Layout.cshtml";
  var saccoTabId = "Sacco";
  var coretecTabId = "Coretec";
}
@section HtmlHead {
  @{

    string[] cssFiles = {
$"~/plugins/tabulator_4.4/css/tabulator_simple.css",
//$"~/plugins/ion.tabs-1.0.2/css/ion.tabs.css",
//$"~/plugins/ion.tabs-1.0.2/css/ion.tabs.skinBordered.css"
$"~/plugins/Responsive-Tabs/css/responsive-tabs.css", // for tab-accordion switching
$"~/plugins/Responsive-Tabs/css/style.css" //basic tab accordion theme
};
  }
  @Styles.Render(cssFiles)
}
<section class="content-header">
  <h1>
    User Accounts
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
    <li class="active">Dashboard</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div id="tabs_portalUsers">
        <ul>
          <li><a href="#@saccoTabId"> Sacco</a></li>
          <li><a href="#@coretecTabId"> Coretec</a></li>
        </ul>

        <div id="@saccoTabId">
          <div class="panel">
            <div class="panel-heading">
              <div class="pull-left">
                <h5 class="panel-info">
                  <strong>Registered Users</strong>
                </h5>
                <p>
                  <a href="@Url.Action("AddOrUpdate", "Account")">
                    <span>Add New</span>
                  </a>
                </p>
              </div>
              <div class="pull-right">
                <button type="button"
                        class="btn btn-labeled btn-primary btn-sm"
                        onclick="ReloadData('SaccoUsers')">
                  <span class="btn-label"><i class="fa fa-refresh"></i></span>
                  Reload
                </button>
                <button type="button" class="btn btn-labeled btn-warning btn-sm" onclick="ClearFilters('SaccoUsers')">
                  <span class="btn-label"><i class="glyphicon glyphicon-remove-circle"></i></span>
                  Clear filters
                </button>
              </div>

            </div>
            <div class="panel-body">
              <div id="saccoUsersListTable"></div>
            </div>
          </div>
        </div>
        <div id="@coretecTabId">
          <div class="panel">
            <div class="panel-heading">
              <div class="pull-left">
                <h5 class="panel-info">
                  <strong>Registered Users</strong>
                </h5>
                <p>
                  <a href="@Url.Action("AddOrUpdate", "Account")">
                    <span>Add New</span>
                  </a>
                </p>
              </div>
              <div class="pull-right">
                <button type="button"
                        class="btn btn-labeled btn-primary btn-sm"
                        onclick="ReloadData('CoretecUsers')">
                  <span class="btn-label"><i class="fa fa-refresh"></i></span>
                  Reload
                </button>
                <button type="button" class="btn btn-labeled btn-warning btn-sm" onclick="ClearFilters('CoretecUsers')">
                  <span class="btn-label"><i class="glyphicon glyphicon-remove-circle"></i></span>
                  Clear filters
                </button>
              </div>
            </div>
            <div class="panel-body">
              <div id="coretecUsersListTable"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

</section>

@section Scripts {
  <!-- Include external scripts-->
  @{
    string[] scriptFiles = {
      $"~/Scripts/moment.js",
      $"~/plugins/tabulator_4.4/js/tabulator.js",
      //$"~/plugins/ion.tabs-1.0.2/js/ion-tabs/ion.tabs.js",
      $"~/plugins/Responsive-Tabs/js/jquery.responsiveTabs.js",
      $"~/Scripts/portal/view/account.js"
};
  }
  @Scripts.Render(scriptFiles)
  <!-- Define local scripts-->
  <script>
    $(document).ready(function () {
      //initIonTabs("#tabs_ViewUsers");
      initResponsiveTabs("#tabs_portalUsers");
      initSaccoTabulator("#saccoUsersListTable", "@Url.Action("AddOrUpdate","Account")");
      initCoretecTabulator("#coretecUsersListTable", "@Url.Action("AddOrUpdate","Account")");
      LoadSaccoData("@Url.Action("GetPortalUsers", "CoretecClient")");
      LoadCoretecData("@Url.Action("GetPortalUsers", "CoretecClient")");
});
  </script>
}
 