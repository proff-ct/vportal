@{
  ViewBag.Title = "Reset Password Fail";
}
<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    @ViewBag.Title
  </h1>
</section>
<!-- Main content -->
<section class="content">

  <div class="error-page">
    <h2 class="headline text-red">400</h2>

    <div class="error-content">
      <h3><i class="fa fa-warning text-red"></i>Incorrect email address</h3>

      <p>
        Password reset failed for the email address you provided<br />
      </p>
      <p>
        Please ensure that you key in the correct email address
        Proceed to @Html.ActionLink("login", "Login", controllerName: "Account") so that you can get the
        activation email resent to the email address for your account
        <br />
        If you keep seeing this error page (i.e. at least 3 times in a row), notify Mobility @@ CoreTec immediately.
        <br />
      </p>
    </div>
  </div>
  <!-- /.error-page -->
</section>

