@{
    Layout = "../Shared/_LayoutAgencyBankingUI.cshtml";
}
@section HtmlHead{
    <link href="https://unpkg.com/tabulator-tables@4.1.1/dist/css/semantic-ui/tabulator_semantic-ui.min.css" rel="stylesheet">
    <script type="text/javascript" src="https://unpkg.com/tabulator-tables@4.4.3/dist/js/tabulator.min.js"></script>
}

<div class="container">
    <div class="title"><h1>@Html.Raw(ViewBag.caption)</h1></div>

    <div id="example-table" class="table-responsive">

    </div>
</div>
@section scripts
{
    <script>
        var table = new Tabulator("#example-table", {
           // data:tabledata,           //load row data from array
            layout:"fitColumns",      //fit columns to width of table
            responsiveLayout:"hide",  //hide columns that dont fit on the table
            tooltips:true,            //show tool tips on cells
            addRowPos:"top",          //when adding a new row, add it to the top of the table
            history:true,             //allow undo and redo actions on the table
            pagination:"local",       //paginate the data
            paginationSize:15,         //allow 7 rows per page of data
            movableColumns:true,      //allow column order to be changed
            resizableRows:true,       //allow row order to be changed

        });
        table.setColumns(@Html.Raw(ViewBag.columns));
        table.setData(@Html.Raw(ViewBag.data));
    </script>
}
 
