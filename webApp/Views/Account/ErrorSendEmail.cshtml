@{
  ViewBag.Title = "Error: Dispatch Email Failure";
}
<!-- Content Header (Page header) -->
<section class="content-header">
  <h1>
    500 @ViewBag.Title
  </h1>
</section>
<!-- Main content -->
<section class="content">

  <div class="error-page">
    <h2 class="headline text-red">500</h2>

    <div class="error-content">
      <h3><i class="fa fa-warning text-red"></i>@ViewBag.ErrorMessage</h3>

      <p>
        An error occurred sending you the account activation email.<br />
      </p>
      <p>
        Proceed to @Html.ActionLink("login", "Login", controllerName: "Account") so that you can get the
        activation email resent to the email address for your account
        <br />
        If you keep seeing this error page (i.e. at least 3 times in a row), notify Mobility @@ CoreTec immediately.
        <br />
      </p>
    </div>
  </div>
  <!-- /.error-page -->
</section>

